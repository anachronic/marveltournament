<p id="notice"><%= notice %></p>

<h1>Peleadores <div class="float-right"><%= link_to 'Agregar Peleador', new_persona_path, :class=>"btn btn-outline-primary" %></div></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">Email</th>
      <th scope="col">Estado</th>
    </tr>
  </thead>
  <tbody>
    <% @personas.each_with_index do |persona, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= link_to persona.name, persona %></td>
        <td><%= persona.email %></td>
        <td><%= persona.alive ? "Viva(o)" : "Muerta(o)" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to "Volver", root_path, :class=>"btn btn-outline-secondary" %>
</div>
